<form action="/recipes/<%= @recipe.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch" />
  <label for="name">Name:</label>
  <input type="text" id="name" name="recipe[name]" value="<%= @recipe.name %>"/><br>
  <label for="ingredients">Ingredients:</label>
  <input name="recipe[ingredients]" id="ingredients" value="<%= @recipe.ingredients %>"></input><br>
  <label for="cook_time">Cook time:</label>
  <input type="text" name="recipe[cook_time]" id="cook_time" value="<%= @recipe.cook_time %>"/>
    <input type="submit" value="Submit"/>

</form>
